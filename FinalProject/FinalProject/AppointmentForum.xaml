                    <Picker
                        x:Name="DoctorPicker"
                        Title="Select your doctor"
                        SelectedIndexChanged = "OnPickerSelectedIndexChanged"
                        TitleColor="#005486"
                        TextColor="#005486"
                        HorizontalOptions="Start"
                        VerticalOptions="Start"
                        FontSize="18"
                        FontFamily="{StaticResource Montserrat-Bold}"
                        Margin="10,0,0,0"/>
                </border:SfBorder>

                <!-- Appointment Date -->
                <Label
                    Text="Appointment Date:"
                    TextColor="#005486"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    FontSize="18"
                    FontFamily="{StaticResource Montserrat-Bold}"
                    Margin="20,0,0,0"/>
                <border:SfBorder BorderColor="{Binding Source={x:Reference AppointmentDateEntry}, Path=IsFocused, Converter={StaticResource ColorConverter}, ConverterParameter=3}"
                                 Style="{StaticResource AddADoctorFormBorderStyle}">
                    <DatePicker
                        x:Name="AppointmentDateEntry"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        FontSize="17"
                        Date="{Binding DateTime.Now}"
                        Format="d"
                        TextColor="Black"
                        Margin="10,0,0,0"/>
                </border:SfBorder>

                <!-- Appointment Time -->
                <Label
                    Text="Appointment Time:"
                    TextColor="#005486"
                    HorizontalOptions="Start"
                    VerticalOptions="Start"
                    FontSize="18"
                    FontFamily="{StaticResource Montserrat-Bold}"
                    Margin="20,0,0,0"/>
