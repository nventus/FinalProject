                                 Style="{StaticResource AddADoctorFormBorderStyle}">

                    <TimePicker
                        x:Name="AppointmentTimeEntry"
                        FontFamily="{StaticResource Montserrat-SemiBold}"
                        FontSize="17"
                        TextColor="Black"
                        Margin="10,0,0,0"/>
                </border:SfBorder>

