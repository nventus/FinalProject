                    VerticalOptions="Center"
                    HeightRequest="125"
                    Margin="0,30,0,30"/>

                <!--Doctor's Name -->
                <border:SfBorder BorderColor="{Binding Source={x:Reference DoctorPicker}, Path=IsFocused, Converter={StaticResource ColorConverter}, ConverterParameter=3}"
